<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".screen.home.track.TractFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_track"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:fontFamily="@font/nunito_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID : 5AC7ARS"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="5dp"/>

            <TextView
                android:fontFamily="@font/nunito_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brezza LDI"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>

            <TextView
                android:fontFamily="@font/nunito_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Duration: 1d 2h"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>

            <TextView
                android:fontFamily="@font/nunito_black_italic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_tracking"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="HCM City - Vung Tau"
                android:drawablePadding="10dp"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>